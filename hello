if (hrs < 12)
        greet = 'Good Morning AJ';
    else if (hrs >= 12 && hrs <= 17)
        greet = 'Good Afternoon AJ';
    else if (hrs >= 17 && hrs <= 24)
        greet = 'Good Evening AJ';

